{
  "name": "Question",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "forceId": false,
  "scope": {
    "include": "answersForAQuestions"
  },
  "properties": {
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "quizId": {
      "type": "number"
    },
    "DifficultLevel" : {
      "type" : "number"
    },
    "category" : [
      {
        "tenDanhMuc" : "string",
        "maDanhMuc" : "string"
      }
    ],
    "isRandom" : {
      "type" : "boolean"
    }
  },
  "validations": [],
  "relations": {
    "quiz": {
      "type": "belongsTo",
      "model": "Quiz",
      "foreignKey": "quizId"
    },
    "answersForAQuestions": {
      "type": "hasMany",
      "model": "AnswersForAQuestion",
      "foreignKey": "questionId"
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
